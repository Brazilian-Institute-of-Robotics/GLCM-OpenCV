find_package(OpenCV REQUIRED)

find_library(GLCM_LIBRARY glcm
    PATHS "@CMAKE_INSTALL_PREFIX@/lib"
)

list(APPEND GLCM_INCLUDE_DIR
  ${OpenCV_INCLUDE_DIRS}
  @CMAKE_INSTALL_PREFIX@/include)

list(APPEND GLCM_LIBRARY ${OpenCV_LIBS})

set(GLCM_LIBRARIES ${GLCM_LIBRARY})
set(GLCM_LIBS ${GLCM_LIBRARY})
set(GLCM_INCLUDE_DIRS ${GLCM_INCLUDE_DIR})